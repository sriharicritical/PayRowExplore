    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConLayDecline"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/button_round_gray_border"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnMerchantCopy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/svReceipt">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvDeclineLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Decline"
                android:textAllCaps="true"
                android:textColor="@color/color_text_amount"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="invalid host response"
                android:textAllCaps="true"
                android:textColor="@color/color_text_amount"
