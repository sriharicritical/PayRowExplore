<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

    <ImageView
        android:id="@+id/ivWatermarkTop"
        android:layout_width="36dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_icon_watermark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivWatermarkBelow"
        android:layout_width="36dp"
        android:layout_height="50dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_icon_watermark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="120dp">

            <ImageView
                android:id="@+id/ivLogoPayRow"
                android:layout_width="150dp"
                android:layout_height="48.53dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/icon_payrow"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTotalSequence"
                android:layout_width="296dp"
                android:layout_height="72dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_round_bg_light_gray_small_curve"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivLogoPayRow">

                <TextView
                    android:id="@+id/tvTotalSeqLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="SEQUENCES - OCT"
                    android:textColor="@color/color_gray"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTotalSeq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="00"
                    android:textColor="#191919"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTotalSeqLabel" />


                <RelativeLayout
                    android:id="@+id/progress_sequence_layout"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tvAverageLabel"
                    app:layout_constraintTop_toTopOf="parent">

                    <!--progress bar implementation-->
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateOnly="false"
                        android:textAlignment="center" />

                    <!--Text implementation in center of the progress bar-->

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvAverageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="average"
                    android:textColor="@color/text_color"
                    android:textSize="11sp"
                    android:visibility="gone"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="0"
                    android:textColor="#191919"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="@+id/tvAverageLabel"
                    app:layout_constraintTop_toBottomOf="@+id/tvAverageLabel" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTotalCredit"
                android:layout_width="296dp"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_round_bg_light_gray_small_curve"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clTotalSequence">


                <TextView
                    android:id="@+id/tvTotalCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="TOTAL CREDIT - OCT"
                    android:textColor="@color/color_gray"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tvTotalCreditValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="#191919"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTotalCredit" />


                <RelativeLayout
                    android:id="@+id/progress_credit_layout"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tvAverageLabel2"
                    app:layout_constraintTop_toTopOf="parent">

                    <!--progress bar implementation-->
                    <ProgressBar
                        android:id="@+id/progress_credit_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:textAlignment="center" />

                    <!--Text implementation in center of the progress bar-->

                </RelativeLayout>


                <TextView
                    android:id="@+id/tvAverageLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="average"
                    android:textColor="@color/text_color"
                    android:textSize="11sp"
                    android:visibility="gone"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/progress_credit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="0"
                    android:textColor="#191919"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="@+id/tvAverageLabel2"
                    app:layout_constraintTop_toBottomOf="@+id/tvAverageLabel2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnDailyReport"
                android:layout_width="296dp"
                android:layout_height="44dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_round_gray_border_thin"
                android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="16dp"
                android:paddingEnd="10.02dp"
                android:text="Summary Report"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/thick_gray"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clTotalCredit" />

            <Button
                android:id="@+id/btnMonthlyReport"
                android:layout_width="296dp"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_round_gray_border_thin"
                android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="16dp"
                android:paddingEnd="10.02dp"
                android:text="Monthly Report"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/thick_gray"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnDailyReport" />

            <Button
                android:id="@+id/btnBuyNowPayLater"
                android:layout_width="296dp"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_round_gray_border_thin"
                android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="16dp"
                android:paddingEnd="10.02dp"
                android:text="@string/payment_status"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/thick_gray"
                android:textSize="14sp"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnMonthlyReport" />

            <!-- <androidx.constraintlayout.widget.ConstraintLayout
                 android:layout_width="315dp"
                 android:layout_height="168dp"
                 android:layout_marginTop="20dp"
                 android:paddingBottom="20dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/btnBuyNowPayLater">
 -->
            <!--<com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="320dp"
                android:layout_height="168dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="30dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnBuyNowPayLater" />-->
            <!-- </androidx.constraintlayout.widget.ConstraintLayout>-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/payrow_footer"
            android:textColor="@color/color_text_80"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
