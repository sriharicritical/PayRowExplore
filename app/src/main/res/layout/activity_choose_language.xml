<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="120dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/payRowLogo"
                android:layout_width="150dp"
                android:layout_height="48.53dp"
                android:layout_marginTop="33dp"
                android:src="@drawable/payrow_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivChooseLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/payRowLogo" />

            <TextView
                android:id="@+id/tvChooseYourLanguage"
                android:layout_width="163dp"
                android:layout_height="28dp"
                android:layout_marginTop="24.47dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="@string/select_language"
                android:textColor="@color/color_text_amount"
                android:textSize="22sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/payRowLogo" />

            <Button
                android:id="@+id/btnArabic"
                android:layout_width="296dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_round_gray_border_thin"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:text="@string/arabic"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvChooseYourLanguage" />

            <Button
                android:id="@+id/btnEnglish"
                android:layout_width="296dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_round_gray_border_thin"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:text="English"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnArabic" />

            <Button
                android:id="@+id/btnFrench"
                android:layout_width="296dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_round_gray_border_thin"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:text="@string/french"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnEnglish" />

            <Button
                android:id="@+id/btnUrdu"
                android:layout_width="296dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_round_gray_border_thin"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:text="Urdu"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnFrench" />

            <Button
                android:id="@+id/btnBangladeshi"
                android:layout_width="296dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_round_gray_border_thin"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:text="Bangla"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnUrdu" />

            <Button
                android:id="@+id/btnHindi"
                android:layout_width="296dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_round_gray_border_thin"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:text="Hindi"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnBangladeshi" />

            <Button
                android:id="@+id/btnMalayalam"
                android:layout_width="296dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_round_gray_border_thin"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:text="Malayalam"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnHindi" />

            <Button
                android:id="@+id/btnChinese"
                android:layout_width="296dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_round_gray_border_thin"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:text="Chinese"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnMalayalam" />


            <ImageView
                android:id="@+id/ivProceed1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_35dp"
                android:paddingBottom="@dimen/_10dp"
                android:visibility="gone"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnChinese" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/ivProceed"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/button_round_dark_gray_bg_fill"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:text="@string/next"
            android:fontFamily="@font/roboto_regular"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvCopyRight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:fontFamily="@font/roboto_medium"
            android:id="@+id/tvCopyRight"
            android:layout_width="303dp"
            android:layout_height="20dp"
            android:layout_marginBottom="16dp"
            android:text="@string/payrow_footer"
            android:textAlignment="center"
            android:textColor="@color/color_gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
