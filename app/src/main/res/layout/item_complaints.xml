<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/backgroung_square_support_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvComplaintName"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingStart="5dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:text="Complaint Name"
            android:textColor="@color/color_text_amount"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvComplaintDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/roboto_regular"
            android:maxLength="20"
            android:text="Date"
            android:textColor="@color/color_select_action"
            android:textSize="11sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvComplaintDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="4"
            android:paddingStart="5dp"
            android:paddingEnd="15dp"
            android:text="NO Complaint Description"
            android:textColor="@color/color_items_header"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvComplaintName" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clNewComplaints"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="5dp"
            android:paddingBottom="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvComplaintDesc">

            <TextView
                android:id="@+id/tvSelectAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Select Action"
                android:textColor="@color/color_select_action"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnResolve"
                android:layout_width="71dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/status_card_bg"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Resolve"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textColor="@color/color_text_amount"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tvSelectAction"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:paddingLeft="5dp"
                android:src="@drawable/outline_file_download_black_48"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tvSelectAction"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>