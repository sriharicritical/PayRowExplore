<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvServiceItem"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_round_gray_border_thin"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_up_24"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center|start"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/tap_to_pay"
            android:textColor="@color/thick_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btnItemCount"
            android:layout_width="71dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginStart="55dp"
            android:background="@drawable/button_add_item_background"
            android:fontFamily="@font/sfprodisplay_medium"
            android:gravity="center"
            android:text="+4items"
            android:textAlignment="gravity"
            android:textColor="#D94B5050"
            android:textSize="13sp"
            android:visibility="gone" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSubAuditorList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAlert" />


</LinearLayout>